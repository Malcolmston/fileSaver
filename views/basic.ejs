<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script type="text/javascript" src="./fileHandle.js"></script>

<% if( message.trim().length !=0 ){ %>
  <script>

    toast_message.error("<%= message %>")

  </script>
  <% } %>

    </body>

</html>





