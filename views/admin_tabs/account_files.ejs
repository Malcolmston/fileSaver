<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<table class="table table-striped">
    <thead>
        <tr>
            <th>file id</th>
            <th>mime type</th>
            <th>size</th>
            <th>name</th>
            <th>file</th>
            <th>userId</th>
            <th>roomId</th>
        </tr>
    </thead>
    <tbody>

        <% for( file of files ) { %>
            <tr>
                <td>
                    <%= file.id %>
                </td>
                <td>
                    <%= file.mimetype %>
                    
                </td>
                <td>
                    <%= file.size %>
                </td>
                <td>
                    <% if( file.originalname == file.name ) { %>
                        <%= file.originalname %> 
                    <% } else { %>
                        The file name is  <%= file.originalname %>  but was changed to  <%= file.name %> 
                    <% } %>
                    
        
                </td>
                <td>
                    <% if( file.data.length > 0 ) { %>
                       <div style="width: 100px; height: 100px; border: 1px solid black; overflow: hidden">
                        <%- file.data %>
                       </div>
                    <% } else { %>
                       <p>the given file is empty</p> 
                    <% } %>
                </td>


                <td>
                    <%= files.userId ? files.userId : "not assigned to a user" %>
                </td>
     
                <td>
                    <%= files.roomId ? files.roomId : "not assigned to a room" %>
                </td>
         
            </tr>



            <% } %>

                <tr>

    </tbody>
</table>