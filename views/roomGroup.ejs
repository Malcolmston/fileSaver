<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script type="text/javascript" src="./fileHandle.js"></script>




<script>
      


$(document).ready(function() {
      console.log( ("<%= rooms %>") )


            // Replace HTML entities with their corresponding characters
var rooms = (("<%= rooms %>")
    .replaceAll('&#34;', '"')
    .replaceAll('&lt;', '<')
    .replaceAll('&gt;', '>')
    .replaceAll('&#39;', "'"));
    
    rooms = JSON.parse(rooms ) 

    const list = $("#list");

    for (let room in rooms) {
        let li = $("<li>").text(room);
        let ol = $("<ol>");

      

        for (let person of rooms[room]) {
            person = person.replaceAll("&lt;", "<")
                           .replaceAll("&gt;", ">")
                           .replaceAll("&#39;", "\"");

            let liPerson = $("<li>").html(person); // Use html() instead of text()
            ol.append(liPerson);
        }

        list.append(li);
        list.append(ol);
    }

    $(".join").on("click",(e) => {
            let n = $(e.target).attr("class").split(/\s+/);
            n = n[0]

            fetch("/joinRoom/"+n, {method:'PUT'}).then(result => result.json()).then(data => {
                  if( data.ok ){
                        toast_message.success(data.message);
                        window.location.reload();
                  } else {
                        toast_message.error(data.message);
                  }
                  
            })
      })

      $(".cancel").on("click",(e) => {
            let n = $(e.target).attr("class").split(/\s+/);

            n = n[0]

            fetch("/cancelRoom/"+n, {method:'PUT'}).then(result => result.json()).then(data => {
                  if( data.ok ){
                        toast_message.success(data.message);
                        window.location.reload();
                  } else {
                        toast_message.error(data.message);
                  }
                  
            })
      })
});





</script>

